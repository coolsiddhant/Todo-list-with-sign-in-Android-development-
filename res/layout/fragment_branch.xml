<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Branch">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@drawable/background"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgbranchlogo"
                android:contentDescription="@string/college_image"
                android:layout_width="500sp"
                android:layout_height="266sp"
                android:layout_margin="10sp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:src="@drawable/branch" />

            <TextView
                android:id="@+id/txtcollege"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="10sp"
                android:layout_below="@+id/imgbranchlogo"
                android:text="@string/branch" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>